<!--Story add form-->
<div class="container form">
    <div class="row">
        <div class="col-md-12">
            <%= form_for(story) do |f| %>
            <% if story.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>
                <ul>
                    <% story.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <div class="field form-group">
                <%= f.label :story_title  %>
                <%= f.text_field :story_title %>
            </div>
            <div class="field form-group">
                <%= f.label :story_image %>
                <%= f.text_field :story_image %>
            </div>
            <div class="field form-group">
                <%= f.label :story_body %>
                <%= f.text_field :story_body %>
            </div>
            <div class="actions form-group">
                <%= f.submit "Add", :class=>"btn btn-lg btn-primary" %>
            </div>
            <% end %>
        </div>
        <%= link_to 'Back', stories_path %>
    </div>
</div>